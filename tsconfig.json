{
  "compilerOptions": {
    "outDir": "dist", // Output directory for compiled files
    "module": "NodeNext", // Use NodeNext to match moduleResolution
    "target": "ES6", // Target ES6
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include DOM and ESNext libraries
    "declaration": true, // Generate .d.ts type definitions
    "jsx": "react-jsx", // Use modern JSX transform for React 19
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable ES module interop
    "skipLibCheck": true, // Skip type-checking for library files
    "moduleResolution": "NodeNext", // Use NodeNext for modern module resolution
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"]
}
